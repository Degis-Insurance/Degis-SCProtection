    function getPayoff() external view {}
    function getAvaiableDepositbyPool(address _poolId) external view {}
    function claimPayoff(uint256 _poolId) external {}
    function provideLiquidity(uint256 _poolId, uint256 _amount) external {}
    function removeLiquidity(uint256 _poolId, uint256 _amount) external {}
