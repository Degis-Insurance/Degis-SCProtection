{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "compiler-version": ["error", "^0.8.13"],
    "prettier/prettier": "error",
    "indent": ["error", 4],
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "func-visibility": ["warn", { "ignoreConstructors": true }],
    "reason-string": ["warn", { "maxLength": 60 }],
    "not-rely-on-time": "off",
    "no-inline-assembly": "off"
  }
}
